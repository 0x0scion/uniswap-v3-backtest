{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    // "module": "node16",
    "module": "node16",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "outDir": "./lib",
    "baseUrl": "./src"
  },
  // "esm": true,
  // "ts-node": {
  //   // Tell ts-node CLI to install the --loader automatically, explained below
  //   "esm": true
  // },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__"]
}
